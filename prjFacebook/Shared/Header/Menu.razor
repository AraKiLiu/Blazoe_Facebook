<!-- header right -->
<div class="flex items-center relative">
  <button class="popover-btn" @onclick="@(() => IsPlus=true)" @onfocusout="@(() => IsPlus=false)">
    <img src="https://bruce-fe-fb.web.app/image/plus.svg" alt=""/>
  </button>
  <button class="popover-btn" @onclick="@(() => IsMsg=true)" @onfocusout="@(() => IsMsg=false)">
    <img src="https://bruce-fe-fb.web.app/image/messenger.svg" alt=""/>
  </button>
  <button class="popover-btn" @onclick="@(() => IsNotification=true)" @onfocusout="@(() => IsNotification=false)">
    <img src="https://bruce-fe-fb.web.app/image/bell.svg" alt=""/>
  </button>
  <button class="popover-btn" @onclick="@(() => IsMore=true)" @onfocusout="@(() => IsMore=false)">
    <img src="https://bruce-fe-fb.web.app/image/down.svg" alt=""/>
  </button>
  <!-- 下拉選單 1 plus -->
  <div class="popover-panel @(IsPlus ? "" : "hidden")">
    <p class="text-white mb-3 text-2xl">建立</p>

    <div class="flex items-center p-1 mb-2 hover:bg-fb-input rounded-lg cursor-pointer">
      <div class="bg-fb-input rounded-full p-2 mr-2 flex justify-center items-center">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" width="22" height="22" viewBox="0 0 24 24" stroke="white">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
        </svg>
      </div>
      <div class="flex-1">
        <p class="text-sm text-white mb-[2px]">貼文</p>
        <p class="text-xs text-gray-400">在動態消息分享貼文。</p>
      </div>
    </div>
  </div>

  <!-- 下拉選單 2 messenger -->
  <div class="popover-panel @(IsMsg ? "" : "hidden")">
    <p class="text-white mb-3 text-2xl">Messsenger</p>
    <div class="bg-fb-input rounded-full py-1 px-3 flex items-center mb-4">
      <svg xmlns="http://www.w3.org/2000/svg" class="w-[18px] h-[18px] mr-2" fill="none" viewBox="0 0 24 24" stroke="#9ba3af">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
      </svg>
      <input type="text" class="w-full bg-transparent focus:outline-none text-white" placeholder="搜尋 Messsenger"/>
    </div>

    <div class="flex items-center mb-2 p-2 rounded-lg hover:bg-fb-input cursor-pointer">
      <div class="w-[50px] h-[50px] rounded-full overflow-hidden mr-3">
        <img class="w-full object-cover" src="https://bruce-fe-fb.web.app/image/avator.png" alt=""/>
      </div>
      <div class="flex-1">
        <p class="text-base text-white mb-[2px]">劉拉拉</p>
        <p class="text-sm text-gray-400">吾皇～萬歲、萬歲、萬萬歲！・1分鐘前</p>
      </div>
    </div>
  </div>

  <!-- 下拉選單 3 notification -->
  <div class="popover-panel @(IsNotification ? "" : "hidden")">
    <p class="text-white mb-3 text-2xl">通知</p>
    <div class="flex items-center mb-2 p-2 rounded-lg hover:bg-fb-input cursor-pointer">
      <div class="w-[50px] h-[50px] rounded-full overflow-hidden mr-3">
        <img class="w-full object-cover" src="https://bruce-fe-fb.web.app/image/avator.png" alt=""/>
      </div>
      <div class="flex-1">
        <p class="text-sm text-white mb-[2px]">
          劉拉拉講了一句廢話！
        </p>
        <p class="text-xs text-fb">1分鐘前</p>
      </div>
    </div>
  </div>

  <!-- 下拉選單 4 more -->
  <div class="popover-panel @(IsMore ? "" : "hidden")">
    <div class="flex items-center mb-2 p-2 rounded-lg hover:bg-fb-input cursor-pointer">
      <div class="w-[50px] h-[50px] rounded-full overflow-hidden mr-3">
        <img class="w-full object-cover" src="https://bruce-fe-fb.web.app/image/avator.png" alt=""/>
      </div>
      <div class="flex-1">
        <p class="text-base text-white mb-[2px]">劉拉拉</p>
        <p class="text-sm text-gray-400">查看你的個人檔案</p>
      </div>
    </div>
    <div class="flex p-1 mb-2 items-center hover:bg-fb-input rounded-lg cursor-pointer">
      <div class="bg-fb-input rounded-full p-2 mr-2 flex justify-center items-center">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" width="22" height="22" viewBox="0 0 24 24" stroke="white">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
            d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"/>
        </svg>
      </div>
      <p class="flex-1 text-white">登出</p>
    </div>
  </div>
</div>

@code {

  [Parameter]
  public bool IsPlus { get; set; }
  [Parameter]
  public bool IsMsg { get; set; }
  [Parameter]
  public bool IsNotification { get; set; }
  [Parameter]
  public bool IsMore { get; set; }
}